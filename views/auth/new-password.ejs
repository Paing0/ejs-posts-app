<%- include("../includes/head") %>
<section class="mx-auto">
  <h1 class="title">Change new password</h1>
  <% if(errorMsg){ %>
  <p class="error-msg"><%= errorMsg %></p>
  <% } %>
  <form action="/change-new-password" method="post">
    <input hidden value="<%= csrfToken %>" name="_csrf" />
    <input hidden value="<%= resetToken %>" name="resetToken" />
    <input hidden value="<%= user_id %>" name="user_id" />
    <div>
      <label for="password">Enter new password</label>
      <input
        type="password"
        id="password"
        name="password"
        value="<%= oldFormData.password %>"
      />
    </div>
    <div>
      <label for="confirm_password">Re-enter your new password</label>
      <input
        type="password"
        id="confirm_password"
        name="confirm_password"
        value="<%= oldFormData.confirm_password %>"
      />
    </div>
    <button class="right">Change password</button>
    <a href="/">Go back home</a>
  </form>
</section>
<%- include("../includes/foot") %>
